<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AhliKesehatan">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/header_ahli_kesehatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_btn"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Ahli Kesehatan"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#515151"
                />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@id/header_ahli_kesehatan"
            android:layout_marginTop="30dp"
            android:id="@+id/foto_profil_ahli_kesehatan1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/foto_profil_lesti"
            app:civ_circle_background_color="#75DB85"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/nama_ahli_kesehatan1"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@id/foto_profil_ahli_kesehatan1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Veronika"
            android:textSize="20dp"

            />

        <LinearLayout
            android:id="@+id/rating_ahli_kesehatan"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/nama_ahli_kesehatan1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_star_24" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_ahli_kesehatan"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/btn_ractangle"
            android:backgroundTint="#6BBDED"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/vertical_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="15dp"
                android:src="@drawable/vertical_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/vertical_line"
                android:fontFamily="@font/poppins_medium"
                android:text="Pengalaman"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toStartOf="@+id/vertical_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@id/vertical_line"
                android:background="@drawable/rectangle_edittext"
                android:backgroundTint="#FFBE3C"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="7 Tahun"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toStartOf="@+id/vertical_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/vertical_line"
                android:fontFamily="@font/poppins_medium"
                android:text="Biaya per 1 jam"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vertical_line"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@id/vertical_line"
                android:background="@drawable/rectangle_edittext"
                android:backgroundTint="#FFBE3C"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="7 Tahun"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vertical_line"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/keterangan_ahli"
            android:layout_below="@id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14dp"
            android:textColor="#515151"
            android:text="Veronika merupakan dokter kesehatan anak, konsultan tumbuh kembang anak yang berpraktek di Eka Hospital BSD. Beliau menempuh pendidikan kedokteran dan pendidikan dokter spesialis anak di Universitas Indonesia. Beliau memiliki ketertarikan khusus pada bidang kesehatan untuk membantu anak tumbuh kembang dengan baik."
            />

        <Button
            android:layout_marginTop="40dp"
            android:layout_below="@id/keterangan_ahli"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_rectangle_orange"
            android:text="Pilih Jadwal"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:elevation="10dp"/>

    </RelativeLayout>

</ScrollView>