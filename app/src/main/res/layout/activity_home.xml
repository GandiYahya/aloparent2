                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="10dp"
                        android:columnCount="3"
                        android:columnOrderPreserved="false"
                        android:rowCount="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1">

                            <LinearLayout
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:orientation="vertical">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/tebak_makanan_sehat"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:background="#6BBDED"
                                    android:elevation="10dp"
                                    android:src="@drawable/games_image"
                                    app:contentPaddingTop="5dp"
                                    app:shapeAppearanceOverlay="@style/roundImageView" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:text="Tebak Hewan"
                                    android:textColor="#5B5B5B"
                                    android:textSize="13dp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1">

                            <LinearLayout
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/tebak_hidup_sehat"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:background="#ED6BD0"
                                    android:elevation="10dp"
                                    android:src="@drawable/mengenal_alam_image"
                                    app:contentPaddingTop="15dp"
                                    app:shapeAppearanceOverlay="@style/roundImageView" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:text="Mengenal Alam"
                                    android:textColor="#5B5B5B"
                                    android:textSize="13dp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1">

                            <LinearLayout
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:orientation="vertical">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/tebak_gerak_sehat"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:background="#AC6BED"
                                    android:elevation="10dp"
                                    android:src="@drawable/tebak_alat_makan_image"
                                    app:contentPadding="5dp"
                                    app:shapeAppearanceOverlay="@style/roundImageView" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:text="Tebak Gerak Sehat"
                                    android:textColor="#5B5B5B"
                                    android:textSize="13dp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </GridLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linierlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/header_aktivitas_anak"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
