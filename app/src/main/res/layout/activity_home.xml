<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_rectangle_orange"
        android:layout_marginBottom="28dp"
        app:itemTextColor="@drawable/navbar_selector"
        app:itemIconTint="@drawable/navbar_selector"
        app:menu="@menu/menu_navigation"
        app:itemIconSize="30dp"
        android:paddingVertical="5dp"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto_profil_orangtua"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/foto_profil_lesti" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/foto_profil_orangtua"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Hello, Lesti!"
                    android:textSize="20dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="25.82dp"
                        android:layout_height="33.77dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_notification_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:layout_width="11.65dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rectangle_notificaton"


                        app:layout_constraintEnd_toEndOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Pencapaian anak hari ini"
                android:textSize="13dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rectangle_blue">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="23.33dp"
                        android:layout_height="23.33dp"
                        android:src="@drawable/ic_tambah_data" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="Tambah data anak"
                        android:textColor="@color/white"
                        android:textSize="13dp"

                        />


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kategori favori para Mama"
                android:textSize="13dp"

                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_rectangle_orange"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Kesehatan"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_rectangle_orange"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Pendidikan"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_rectangle_orange"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Permainan"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_rectangle_orange"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Pola Asuh"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Artikel untuk Mama hari ini"
                android:textSize="13dp"

                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:elevation="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/artikel_untuk_mama"
                            app:shapeAppearanceOverlay="@style/roundImageView" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_rectangle" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="bottom"
                            android:padding="19dp"
                            android:text="Agar di usia 3 Tahun cerdas, yuk biasakan ini dirumah"
                            android:textColor="@color/white"
                            android:textSize="13dp" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/artikel_untuk_mama"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:elevation="10dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_rectangle" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="bottom"
                            android:padding="19dp"
                            android:text="Pilih mainan yang tepat untuk tumbuh kembang anak"
                            android:textColor="@color/white"
                            android:textSize="13dp" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Permainan untuk buah hati"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Lihat semua"
                    android:textColor="#6FBDE9"
                    android:textSize="13dp"

                    />
            </RelativeLayout>

            <GridLayout
                android:id="@+id/grid_main_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/tebak_makanan_sehat"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="#6BBDED"
                            android:elevation="10dp"
                            android:src="@drawable/games_image"
                            app:contentPaddingTop="5dp"
                            app:shapeAppearanceOverlay="@style/roundImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Tebak makanan"
                            android:textColor="#5B5B5B"
                            android:textSize="13dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/tebak_hidup_sehat"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="#ED6BD0"
                            android:src="@drawable/mengenal_alam_image"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:elevation="10dp"
                            app:contentPaddingTop="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Mengenal Alam"
                            android:textColor="#5B5B5B"
                            android:textSize="13dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/tebak_gerak_sehat"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="#AC6BED"
                            android:elevation="10dp"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:src="@drawable/tebak_alat_makan_image"
                            app:contentPadding="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Tebak gerak sehat"
                            android:textColor="#5B5B5B"
                            android:textSize="13dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>