                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Lihat semua"
                            android:textColor="#6FBDE9"
                            android:textSize="13dp"

                            />
                    </RelativeLayout>

                    <GridLayout
