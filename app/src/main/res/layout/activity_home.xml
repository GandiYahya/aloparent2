                    android:layout_height="180dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_rectangle_blue">

                    <LinearLayout
                        android:id="@+id/tambahDataAnak"
                        android:onClick="inputDataAnak"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="23.33dp"
                            android:layout_height="23.33dp"
                            android:src="@drawable/ic_tambah_data" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="Tambah data anak"
                            android:textColor="@color/white"
                            android:textSize="13dp"

                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/data_anak"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/nama_anak"
